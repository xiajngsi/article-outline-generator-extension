{
    "name": "Better Outline",
    "description": "Auto generate outline for readme, article, more",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "css": [
                "./lib/metisMenu.min.css"
            ],
            "js": [
                "./lib/jquery.js",
                "./lib/metismenu.js"
            ],
            "matches": [
                "*://*/*"
            ],
            "run_at": "document_start"
        },
        {
            "css": [
                "style.css"
            ],
            "js": [
                "index.js"
            ],
            "matches": [
                "*://*/*"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icon-16.png",
            "32": "/images/icon-32.png",
            "48": "/images/icon-48.png",
            "128": "/images/icon-128.png"
        }
    },
    "options_page": "options.html"
}